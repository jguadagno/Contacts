    <ItemGroup>
        <PackageReference Include="JosephGuadagno.AzureHelpers.Storage" Version="1.1.0-20200811.2-preview" />
        <PackageReference Include="Microsoft.ApplicationInsights.AspNetCore" Version="2.14.0" />
        <PackageReference Include="Microsoft.ApplicationInsights.NLogTarget" Version="2.14.0" />
        <PackageReference Include="Microsoft.Extensions.Caching.SqlServer" Version="3.1.6" />
