@model IEnumerable<Contacts.Domain.Models.Contact>

@{
    ViewData["Title"] = "View Contacts";
}

<h1>Contacts</h1>
<p class="lead">
    These are the contacts that we have been building on 'Coding with JoeG'
</p>

<table class="table table-striped">
    <thead class="thead-dark">
    <tr>
        <th scope="col">Id</th>
        <th scope="col">First</th>
        <th scope="col">Last</th>
        <th scope="col">Full Name</th>
        <th scope="col">&nbsp;</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var contact in Model)
    {
        <tr>
            <td><a asp-controller="Contact" asp-action="Details" asp-route-id="@contact.ContactId">@contact.ContactId</a></td>
            <td>@contact.FirstName</td>
            <td>@contact.LastName</td>
            <td>@contact.FullName</td>
            <td>
                <a asp-action="Edit" asp-controller="Contact" asp-route-id="@contact.ContactId" class="btn btn-primary">Edit</a>
                <a asp-action="Delete" asp-controller="Contact" asp-route-id="@contact.ContactId" class="btn btn-danger">Delete</a> 
            </td>
        </tr>
    }
    </tbody>
</table>

<a asp-action="Add" asp-controller="Contact" class="btn btn-primary">Add</a>
